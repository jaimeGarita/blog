---
import PageLayout from "@/layouts/Base.astro";

const experience: { date: string; desc: string; href: string; title: string }[] = [
	{
		date: "Diciembre 2022 - Actualidad",
		desc: "Desarrollo de un software de gestión documental utilizando tecnologías basadas en microservicios y siguiendo una arquitectura hexagonal. Trabajé con micro-litos sin infraestructura dedicada, permitiendo la comunicación mediante HTTP. Además, diseñé y desarrollé una arquitectura backend utilizando un enfoque de micro-litos, permitiendo la comunicación cliente-servidor con el frontend de la aplicación.",
		href: "https://exceltic.com/",
		title: "Exceltic",
	},
	{
		date: "Junio 2022 - Diciembre 2022",
		desc: 'Reparaciónes de ordenadores y mantenimiento de equipos. Tareas de "HelpDesk" a distinas clínicas de la empresa',
		href: "",
		title: "Centros ideal",
	},
];

const education: { date: string; href: string; school: string; title: string }[] = [
	{
		date: "Septiembre 2024 - Actualidad",
		href: "https://mioti.es/es/",
		school: "MIOTI Tech & Business School",
		title: "Data & Cloud Engineer",
	},
	{
		date: "2021 - 2023",
		href: "https://salesianosdosa.com/",
		school: "Colegio Salesianos Santo Domingo Savio",
		title: "Grado superior en desarrollo de aplicaciónes multiplataforma",
	},
	{
		date: "2019 - 2021",
		href: "https://salesianosdosa.com/",
		school: "Colegio Salesianos Santo Domingo Savio",
		title: "Grado medio sistemas microinformáticos y redes",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Sobre mi</h1>
		<h2 class="title mb-4 text-xl">Experiencia</h2>
		<p></p>
		<dl class="space-y-4">
			{
				experience.map(({ date, desc, href, title }) => (
					<div class="">
						<dt>
							<span class="flex gap-2">
								<a
									class="cactus-link font-bold text-accent"
									href={href}
									rel="noopener noreferrer"
									target="_blank"
								>
									{title}
								</a>

								<p class="text-gray-500"> ({date})</p>
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	</section>
	<section>
		<h2 class="title mb-4 mt-10 text-xl">Formación profesional</h2>
		<p></p>
		<dl class="space-y-4">
			{
				education.map(({ date, href, school, title }) => (
					<div class="">
						<dt>
							<span class="flex gap-2">
								<a
									class="cactus-link font-bold text-accent"
									href={href}
									rel="noopener noreferrer"
									target="_blank"
								>
									{school}
								</a>
								:<p class="text-gray-500"> ({date})</p>
							</span>
						</dt>
						<dd>{title}</dd>
					</div>
				))
			}
		</dl>
	</section>
</PageLayout>
